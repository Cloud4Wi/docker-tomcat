services:
    - docker 

before_install:
    - docker --version

install:
    - git clone https://github.com/docker-library/official-images.git official-images


before_script:
    - image="logocomune/tomcat"
    - docker build -t "$image" .
    - docker inspect "$image"

script:
    - official-images/test/run.sh "$image" --help

after_script:
    - docker images
